{
  "plugins": [
    "@prettier/plugin-oxc"
  ],
  "overrides": [
    {
      "files": ["*.js", "*.mjs", "*.cjs", "*.jsx", "*.ts", "*.tsx"],
      "options": {
        "arrowParens": "avoid",
        "bracketSpacing": false,
        "bracketSameLine": true,
        "printWidth": 80,
        "singleQuote": true,
        "trailingComma": "es5",
        "endOfLine": "auto"
      }
    },
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "arrowParens": "avoid",
        "bracketSpacing": false,
        "bracketSameLine": true,
        "printWidth": 66,
        "proseWrap": "preserve",
        "singleQuote": true,
        "trailingComma": "all",
        "endOfLine": "auto"
      }
    },
    {
      "files": ["*.scss", "*.css", "*.yml"],
      "options": {
        "printWidth": 80,
        "endOfLine": "auto"
      }
    }
  ]
}
